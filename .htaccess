<IfModule mod_headers.c>
  # Security headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), interest-cohort=()"
  Header set Cross-Origin-Opener-Policy "same-origin"

  # Only enforce HSTS when site is served via HTTPS
  <If "%{HTTPS} == 'on'">
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
  </If>

  # Start with Report-Only CSP to avoid accidental breakage
  # Review reports in browser devtools/network to tighten later
  Header set Content-Security-Policy-Report-Only "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://www.googletagmanager.com https://www.google-analytics.com https://*.google-analytics.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; object-src 'none'; upgrade-insecure-requests"
</IfModule>

# Prevent direct access to sensitive directories/files
<FilesMatch "(?i)\.(sql|ini|log|bak|swp|dist)$">
  Require all denied
</FilesMatch>

# Deny listing of directories
Options -Indexes
# ==============================================================================
# .htaccess - Nu leren voor later
# Performance optimalisatie, caching, compressie en beveiliging
# ==============================================================================

# ------------------------------------------------------------------------------
# Browser Caching - Exponential expiry times
# ------------------------------------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # HTML (1 uur - vaak geupdate content)
  ExpiresByType text/html "access plus 1 hour"
  
  # CSS en JavaScript (1 jaar - versioned files)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  
  # Afbeeldingen (1 jaar - statische content)
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Fonts (1 jaar)
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  
  # Favicon en manifest (1 week)
  ExpiresByType image/vnd.microsoft.icon "access plus 1 week"
  ExpiresByType application/manifest+json "access plus 1 week"
</IfModule>

# ------------------------------------------------------------------------------
# Cache-Control Headers voor moderne browsers
# ------------------------------------------------------------------------------
<IfModule mod_headers.c>
  # CSS en JS - immutable (versioned files)
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Afbeeldingen - lange cache
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
  
  # HTML - korte cache met revalidatie
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>
  
  # Fonts - lange cache
  <FilesMatch "\.(ttf|otf|woff|woff2|eot)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
</IfModule>

# ------------------------------------------------------------------------------
# GZIP Compressie - Kleinere bestanden = snellere loading
# ------------------------------------------------------------------------------
<IfModule mod_deflate.c>
  # Comprimeer HTML, CSS, JavaScript, Text, XML en fonts
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/atom_xml
  AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
  AddOutputFilterByType DEFLATE font/ttf
  AddOutputFilterByType DEFLATE font/otf
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE font/woff2
  AddOutputFilterByType DEFLATE image/svg+xml
  
  # Uitzonderingen voor al gecomprimeerde bestanden
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp|zip|gz|bz2)$ no-gzip
</IfModule>

# ------------------------------------------------------------------------------
# Security Headers
# ------------------------------------------------------------------------------
<IfModule mod_headers.c>
  # Voorkom clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # XSS Protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Content Type Sniffing uitschakelen
  Header always set X-Content-Type-Options "nosniff"
  
  # Referrer Policy - privacy vriendelijk
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Permissions Policy - beperk onnodige features
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ------------------------------------------------------------------------------
# HTTPS Redirect - Force HTTPS voor alle verkeer
# ------------------------------------------------------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect HTTP naar HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Redirect www naar non-www (optioneel - activeer indien gewenst)
  # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# ------------------------------------------------------------------------------
# Custom Error Pages
# ------------------------------------------------------------------------------
ErrorDocument 404 /404.html

# ------------------------------------------------------------------------------
# UTF-8 Encoding
# ------------------------------------------------------------------------------
AddDefaultCharset UTF-8
<IfModule mod_mime.c>
  AddCharset UTF-8 .html .css .js .xml .json .txt
</IfModule>

# ------------------------------------------------------------------------------
# ETag verwijderen (Cache-Control is voldoende)
# ------------------------------------------------------------------------------
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# ------------------------------------------------------------------------------
# Prevent directory browsing
# ------------------------------------------------------------------------------
Options -Indexes

# ------------------------------------------------------------------------------
# Protect sensitive files
# ------------------------------------------------------------------------------
<FilesMatch "(^\.htaccess|^\.git|\.bak$|\.log$|\.md$)">
  Order allow,deny
  Deny from all
</FilesMatch>
